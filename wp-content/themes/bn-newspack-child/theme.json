{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 3,
  "settings": {
    "layout": {
      "contentSize": "680px",
      "wideSize": "1280px"
    },
    "spacing": {
      "units": ["px", "rem", "em", "%", "vh", "vw"],
      "spacingScale": {
        "steps": 0
      },
      "spacingSizes": [
        { "slug": "xs", "size": "0.5rem", "name": "XS" },
        { "slug": "sm", "size": "1rem", "name": "Small" },
        { "slug": "md", "size": "1.5rem", "name": "Medium" },
        { "slug": "lg", "size": "2rem", "name": "Large" },
        { "slug": "xl", "size": "3rem", "name": "XL" },
        { "slug": "2xl", "size": "4rem", "name": "2XL" }
      ]
    },
    "typography": {
      "fluid": true,
      "fontFamilies": [
        {
          "slug": "body",
          "name": "Body",
          "fontFamily": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Helvetica Neue', sans-serif"
        },
        {
          "slug": "heading",
          "name": "Heading",
          "fontFamily": "Georgia, 'Times New Roman', serif"
        }
      ],
      "fontSizes": [
        { "slug": "xs", "size": "0.75rem", "name": "XS" },
        { "slug": "sm", "size": "0.875rem", "name": "Small" },
        { "slug": "base", "size": "1rem", "name": "Base", "fluid": { "min": "0.875rem", "max": "1rem" } },
        { "slug": "lg", "size": "1.125rem", "name": "Large", "fluid": { "min": "1rem", "max": "1.125rem" } },
        { "slug": "xl", "size": "1.25rem", "name": "XL", "fluid": { "min": "1.125rem", "max": "1.25rem" } },
        { "slug": "2xl", "size": "1.5rem", "name": "2XL", "fluid": { "min": "1.25rem", "max": "1.5rem" } },
        { "slug": "3xl", "size": "2rem", "name": "3XL", "fluid": { "min": "1.5rem", "max": "2rem" } },
        { "slug": "4xl", "size": "2.5rem", "name": "4XL", "fluid": { "min": "2rem", "max": "2.5rem" } },
        { "slug": "5xl", "size": "3rem", "name": "5XL", "fluid": { "min": "2.5rem", "max": "3rem" } }
      ]
    },
    "color": {
      "defaultPalette": false,
      "palette": [
        { "slug": "base", "name": "Base", "color": "#111111" },
        { "slug": "contrast", "name": "Contrast", "color": "#ffffff" },
        { "slug": "primary", "name": "Primary (Bay Nature Orange)", "color": "#E87722" },
        { "slug": "secondary", "name": "Secondary (Green)", "color": "#0a6847" },
        { "slug": "cyan", "name": "Cyan (Join)", "color": "#00B8D4" },
        { "slug": "yellow", "name": "Yellow (Donate)", "color": "#FFD600" },
        { "slug": "gray-50", "name": "Gray 50", "color": "#f9fafb" },
        { "slug": "gray-100", "name": "Gray 100", "color": "#f3f4f6" },
        { "slug": "gray-200", "name": "Gray 200", "color": "#e5e7eb" },
        { "slug": "gray-300", "name": "Gray 300", "color": "#d1d5db" },
        { "slug": "gray-700", "name": "Gray 700", "color": "#374151" },
        { "slug": "gray-900", "name": "Gray 900", "color": "#111827" }
      ]
    }
  },
  "styles": {
    "color": {
      "text": "var(--wp--preset--color--base)",
      "background": "var(--wp--preset--color--contrast)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--body)",
      "fontSize": "var(--wp--preset--font-size--base)",
      "lineHeight": "1.6"
    },
    "spacing": {
      "padding": {
        "top": "var(--wp--preset--spacing--sm)",
        "bottom": "var(--wp--preset--spacing--sm)",
        "left": "var(--wp--preset--spacing--sm)",
        "right": "var(--wp--preset--spacing--sm)"
      }
    },
    "elements": {
      "heading": {
        "typography": {
          "fontFamily": "var(--wp--preset--font-family--heading)",
          "fontWeight": "700",
          "lineHeight": "1.2"
        }
      },
      "h1": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--5-xl)"
        }
      },
      "h2": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--4-xl)"
        }
      },
      "h3": {
        "typography": {
          "fontSize": "var(--wp--preset--font-size--3-xl)"
        }
      },
      "link": {
        "color": {
          "text": "var(--wp--preset--color--secondary)"
        },
        ":hover": {
          "color": {
            "text": "var(--wp--preset--color--primary)"
          }
        }
      }
    }
  },
  "customTemplates": [
    {
      "name": "member-only-content-default-template",
      "title": "Member Only Content Default Template",
      "postTypes": ["post", "article"]
    }
  ]
}

